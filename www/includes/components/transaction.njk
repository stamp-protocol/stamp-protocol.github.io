{% macro main(txid, prev, body, classes) %}
<div class="p-4 mb-4 bg-gray-100">
	<table cellspacing="0" cellpadding="0" class="max-w-full">
		<tbody>
			<tr>
				<td class="font-bold">TXID:</td>
				<td class="pl-2">
					<code class="{{ classes }}">{{ txid }}</code>
				</td>
			</tr>
			<tr>
				<td class="font-bold">Last&nbsp;TX(s):</td>
				<td class="pl-2">
					<code>{{ prev }}</code>
				</td>
			</tr>
			<tr>
				<td class="font-bold">Type:</td>
				<td class="pl-2">
					<code class="text-xl {{ classes }}">{{ body }}</code>
				</td>
			</tr>
		</tbody>
	</table>
</div>
{% endmacro %}

